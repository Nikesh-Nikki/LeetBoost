{
    "manifest_version": 3,
    "name": "LeetBoost",
    "version": "1.0",
    "description": "Improves overall coding experience on leetcode",
    "permissions": ["scripting", "activeTab","storage"],
    "background": {
        "service_worker": "src/service-worker.js",
        "type" : "module"
    },
    "action": {
        "default_popup": "dist/index.html"
    },
    
    "web_accessible_resources": [
        {
            "resources" : ["src/enable.js" , "src/disable.js"] , 
            "matches" : ["https://leetcode.com/*"]
        }
    ],
    "content_scripts" : [
        {
        "run_at": "document_end",
        "js": ["src/content.js"],
        "type" : "module",
        "matches": [
            "https://leetcode.com/problems/*",
            "https://leetcode.com/contest/*"
        ]
        }
    ]
}